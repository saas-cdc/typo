<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { :form_type => "article", :form_action => { :action => "new", :id => @article.id , :class => ('autosave')} } %>

<%= form_tag :action=>"merge", :id => @article.id do %>
  <div class='clearfix'>
    <label for="merge_with"> Article ID </label>
    <div class='input'>
      <input class="large" id="merge_with" name="merge_with" size="30" type="text">
    </div>
  </div>
  <% if @user.admin? %>
	  Merge Articles:
	  <div class='actions'>
	    <%= submit_tag("Merge") %>  
	  </div>
  <% end %>
 <% end %>
